{
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": "src",
    "module": "commonjs",
    "lib": ["es6"],
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "declaration": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
