{
  "name": "rust-ts",
  "version": "2.2.0",
  "description": "Rust-y code in TypeScript, cause why not?",
  "author": "Andrew X. Shah <drewshah0@gmail.com> (https://github.com/drewxs/)",
  "keywords": [
    "typescript",
    "rust"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/drewxs/rust-ts.git"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*"
  ],
  "engines": {
    "node": "^18.x.x",
    "npm": "use-pnpm",
    "yarn": "use-pnpm",
    "pnpm": "^7.x.x"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "test": "jest",
    "doc": "rimraf docs && typedoc src/**/*.ts",
    "serve": "pnpm doc && http-server docs",
    "lint": "eslint --no-ignore --max-warnings=0 --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "npx simple-git-hooks"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@semantic-release/changelog": "^6.0.2",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^9.0.2",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@types/jest": "^29.4.0",
    "@types/node": "18.15.0",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "eslint": "8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "http-server": "^14.1.1",
    "jest": "^29.5.0",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "rimraf": "^4.4.0",
    "semantic-release": "^20.1.1",
    "simple-git-hooks": "^2.8.1",
    "ts-jest": "^29.0.5",
    "typedoc": "^0.23.26",
    "typescript": "4.9.5",
    "webpack": "^5.76.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "pnpm build && pnpm test",
    "commit-msg": "npx --no -- commitlint --edit"
  }
}
