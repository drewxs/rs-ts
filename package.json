{
  "name": "rust-ts",
  "version": "6.0.0",
  "description": "Rusty TypeScript",
  "author": "Andrew X. Shah <drewshah0@gmail.com> (https://github.com/drewxs)",
  "keywords": [
    "typescript",
    "rust"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/drewxs/rust-ts.git"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*"
  ],
  "engines": {
    "node": "^18.x.x",
    "npm": "use-pnpm",
    "yarn": "use-pnpm",
    "pnpm": "^8.x.x"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "test": "jest",
    "doc": "rimraf docs && typedoc src/**/*.ts",
    "serve": "pnpm doc && http-server docs",
    "lint": "eslint --no-ignore --max-warnings=0 --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "npx simple-git-hooks"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^11.0.2",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "@types/jest": "^29.5.11",
    "@types/node": "20.9.1",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "eslint": "8.54.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "semantic-release": "^22.0.12",
    "simple-git-hooks": "^2.9.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.5",
    "typescript": "5.2.2",
    "webpack": "^5.89.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "pnpm build && pnpm test",
    "commit-msg": "npx --no -- commitlint --edit"
  }
}
